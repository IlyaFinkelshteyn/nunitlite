<?xml version="1.0"?>
<project name="TestData" default="build" basedir=".">

  <patternset id="source-files">
    <include name="*.cs"/>
    <exclude name="DatapointFixture.cs"/>
    <exclude name="LegacySuiteData.cs"/>
    <exclude name="SetUpFixtureTests.cs"/>
    <exclude name="TestFixtureExtensionData.cs"/>
    <exclude name="TheoryFixture.cs"/>
    <exclude name="ThreadingFixture.cs"/>
    <exclude name="UnexpectedExceptionFixture.cs"/>
    <exclude name="UnhandledExceptions.cs"/>
  </patternset>
  
  <target name="build">
    <csc target="library"
        output="${current.build.dir}/nunitlite.testdata.dll"
        debug="${build.debug}"
        define="${build.defines};NUNITLITE"
        warninglevel="${warn}">
      <sources basedir=".">
        <include name="../CommonAssemblyInfo.cs"/>
        <patternset refid="source-files"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="mscorlib.dll"/>
        <include name="nunitlite.dll"/>
      </references>
    </csc>
  </target>

</project>
